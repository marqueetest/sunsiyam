@inherits UmbracoViewPage
@{
    var variants = Model.GetHrefLangPages();

    if (variants.Any())
    {
        <link rel="alternate" hreflang="@(Model.GetCultureFromDomains()?.Substring(0,2))" href="@Model.Url(mode: UrlMode.Absolute)" />

        foreach (var variant in variants)
        {
            <link rel="alternate" hreflang="@(variant.GetCultureFromDomains()?.Substring(0,2))" href="@variant.Url(mode: UrlMode.Absolute)" />
        }
    }
}